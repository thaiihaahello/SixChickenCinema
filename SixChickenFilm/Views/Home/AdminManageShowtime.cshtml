<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản Lý Lịch Chiếu</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/sidebar.css">
    <link rel="stylesheet" href="~/css/popup.css">
    <link rel="stylesheet" href="~/css/adminScreen.css">
</head>
<body>
    <div class="container-flex">
        <div class="sidebar">
            <a href="/">Quản lý phim</a>
            <a href="#">Quản lý lịch chiếu</a>
            <a href="#">Quản lý phòng chiếu</a>
            <a href="/Home/AdminManageShowtime" class="active">Quản lý suất chiếu</a>
            <a href="/Home/AdminManageTicket">Quản lý vé</a>
            <a href="/Home/AdminManagePromotion">Quản lý khuyến mãi</a>
            <a href="/Home/AdminManageAffiliate">Quản lý affiliate</a>
            <a href="#" class="logout">Đăng xuất</a>
        </div>

        <div class="main-content">
            <h2 class="mb-4">Lịch chiếu ngày: 03/03/2025</h2>

            <div class="btn-group-custom">
                <button class="btn btn-secondary">Quay lại</button>
                <button id="create-pu-btn" class="btn btn-success">+ Tạo phòng chiếu</button>
            </div>

            <form class="form-inline">
                <label class="my-1 mr-2" for="room">Phòng chiếu:</label>
                <select class="custom-select my-1 mr-sm-2" id="room">
                    <option>Cinema 1</option>
                    <option>Cinema 2</option>
                    <option>Cinema 3</option>
                </select>

                <label class="my-1 mr-2" for="date">Ngày chiếu:</label>
                <input type="date" class="form-control my-1 mr-sm-2" id="date" value="2025-03-03">

                <button type="submit" class="btn btn-primary my-1">Tìm kiếm</button>
            </form>

            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Phim chiếu</th>
                            <th>Hình thức chiếu</th>
                            <th>Hình thức dịch</th>
                            <th>Thời gian chiếu</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Vây Hãm: Kẻ Trừng Phạt</td>
                            <td>2D</td>
                            <td>Phụ đề</td>
                            <td>8:00 - 9:45</td>
                            <td style="color: red">Đã chiếu</td>
                        </tr>
                        <tr>
                            <td>Vây Hãm: Kẻ Trừng Phạt</td>
                            <td>2D</td>
                            <td>Phụ đề</td>
                            <td>10:00 - 11:45</td>
                            <td style="color: green">Đang chiếu</td>
                        </tr>
                        <tr>
                            <td>Vây Hãm: Kẻ Trừng Phạt</td>
                            <td>2D</td>
                            <td>Phụ đề</td>
                            <td>12:00 - 13:45</td>
                            <td style="color: blue">Sắp chiếu</td>
                        </tr>
                        <tr>
                            <td>Vây Hãm: Kẻ Trừng Phạt</td>
                            <td>2D</td>
                            <td>Phụ đề</td>
                            <td>14:00 - 15:45</td>
                            <td style="color: blue">Sắp chiếu</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div id="popup" class="popup-overlay">
        <div class="popup-content">
            <form>
                <label for="cinema">Phim chiếu:</label>
                <input type="text" id="cinema" name="cinema" placeholder="Nhập tên phim" required>

                <label for="date">Ngày chiếu:</label>
                <input type="date" id="date" name="date" value="2025-03-03" required>

                <div class="time-selection">
                    <div class="time-group">
                        <label for="start-time">Giờ bắt đầu:</label>
                        <input type="time" id="start-time" name="start-time" required>
                    </div>
                    <div class="time-group">
                        <label for="end-time">Giờ kết thúc:</label>
                        <input type="time" id="end-time" name="end-time" required>
                    </div>
                </div>

                <label for="type">Hình thức chiếu:</label>
                <select id="type" name="type">
                    <option value="2D">2D</option>
                    <option value="3D">3D</option>
                </select>

                <label for="language">Hình thức dịch:</label>
                <select id="language" name="language">
                    <option value="phude">Phụ đề</option>
                    <option value="longtieng">Lồng tiếng</option>
                </select>

                <div class="popup-buttons">
                    <button type="submit" class="btn btn-success">Tạo</button>
                    <button type="button" class="btn btn-secondary" id="close-popup">Đóng</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        const createBtn = document.getElementById('create-pu-btn'); // Nút mở popup
        const popup = document.getElementById('popup'); // Popup chính
        const closeBtn = document.getElementById('close-popup'); // Nút đóng popup

        // Mở popup
        if (createBtn) {
            createBtn.addEventListener('click', () => {
                popup.classList.add('active'); // Thêm lớp active để hiển thị popup
            });
        }

        // Đóng popup
        if (closeBtn) {
            closeBtn.addEventListener('click', () => {
                popup.classList.remove('active'); // Xóa lớp active để ẩn popup
            });
        }
    </script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


