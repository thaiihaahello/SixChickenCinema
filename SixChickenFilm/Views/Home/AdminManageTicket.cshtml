<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản Lý Giá Vé</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/sidebar.css">
    <link rel="stylesheet" href="~/css/popup.css">
    <link rel="stylesheet" href="~/css/adminScreen.css">
</head>
<body>
    <div class="container-flex">
        <div class="sidebar">
            <a href="/">Quản lý phim</a>
            <a href="#">Quản lý lịch chiếu</a>
            <a href="#">Quản lý phòng chiếu</a>
            <a href="/Home/AdminManageShowtime">Quản lý suất chiếu</a>
            <a href="/Home/AdminManageTicket" class="active">Quản lý vé</a>
            <a href="/Home/AdminManagePromotion">Quản lý khuyến mãi</a>
            <a href="/Home/AdminManageAffiliate">Quản lý affiliate</a>
            <a href="#" class="logout">Đăng xuất</a>
        </div>

        <div class="main-content">
            <h2 class="mb-4">Quản lý giá vé</h2>

            <div class="statistics-container">
                <div class="stat-box">
                    <div class="stat-title">Tổng loại vé</div>
                    <div class="stat-value">5</div>
                </div>
                <div class="stat-box">
                    <div class="stat-title">Giá vé thấp nhất</div>
                    <div class="stat-value">50.000 VND</div>
                </div>
                <div class="stat-box">
                    <div class="stat-title">Giá vé cao nhất</div>
                    <div class="stat-value">100.000 VND</div>
                </div>
            </div>

            <div class="btn-group-custom">
                <button class="btn btn-secondary">Quay lại</button>
                <button id="create-pu-btn" class="btn btn-success">+ Tạo giá vé</button>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Loại ghế</th>
                            <th>Hình thức chiếu</th>
                            <th>Ngày áp dụng</th>
                            <th>Loại phòng chiếu</th>
                            <th>Giá vé</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td style="color: blue">Ghế thường</td>
                            <td>2D</td>
                            <td>Ngày thường</td>
                            <td>Standard</td>
                            <td>50.000 VND</td>
                            <td class="action-buttons">
                                <button class="btn btn-warning btn-sm">Sửa</button>
                                <button class="btn btn-danger btn-sm">Xóa</button>
                            </td>
                        </tr>
                        <tr>
                            <td style="color: blue">Ghế thường</td>
                            <td>2D</td>
                            <td>Cuối tuần</td>
                            <td>Standard</td>
                            <td>60.000 VND</td>
                            <td class="action-buttons">
                                <button class="btn btn-warning btn-sm">Sửa</button>
                                <button class="btn btn-danger btn-sm">Xóa</button>
                            </td>
                        </tr>
                        <tr>
                            <td style="color: red">Ghế VIP</td>
                            <td>2D</td>
                            <td>Cuối tuần</td>
                            <td>IMAX</td>
                            <td>70.000 VND</td>
                            <td class="action-buttons">
                                <button class="btn btn-warning btn-sm">Sửa</button>
                                <button class="btn btn-danger btn-sm">Xóa</button>
                            </td>
                        </tr>
                        <tr>
                            <td style="color: deeppink">Ghế Couple</td>
                            <td>2D</td>
                            <td>Ngày thường</td>
                            <td>Dolby Atmos</td>
                            <td>50.000 VND</td>
                            <td class="action-buttons">
                                <button class="btn btn-warning btn-sm">Sửa</button>
                                <button class="btn btn-danger btn-sm">Xóa</button>
                            </td>
                        </tr>
                        <tr>
                            <td style="color: deeppink">Ghế Couple</td>
                            <td>2D</td>
                            <td>Ngày lễ</td>
                            <td>Dolby Atmos</td>
                            <td>100.000 VND</td>
                            <td class="action-buttons">
                                <button class="btn btn-warning btn-sm">Sửa</button>
                                <button class="btn btn-danger btn-sm">Xóa</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div id="popup" class="popup-overlay">
        <div class="popup-content">
            <h3>Tạo giá vé</h3>
            <form>
                <!-- Loại ghế -->
                <label for="seat-type">Loại ghế:</label>
                <select id="seat-type" name="seat-type" required>
                    <option value="" disabled selected>Chọn loại ghế</option>
                    <option value="standard">Ghế thường</option>
                    <option value="vip">Ghế VIP</option>
                    <option value="couple">Ghế Couple</option>
                </select>

                <!-- Hình thức chiếu -->
                <label for="projection-method">Hình thức chiếu:</label>
                <select id="projection-method" name="projection-method" required>
                    <option value="" disabled selected>Chọn hình thức chiếu</option>
                    <option value="2D">2D</option>
                    <option value="3D">3D</option>
                    <option value="IMAX">IMAX</option>
                </select>

                <!-- Loại ngày áp dụng -->
                <label for="date-type">Loại ngày áp dụng:</label>
                <select id="date-type" name="date-type" required>
                    <option value="" disabled selected>Chọn loại ngày áp dụng</option>
                    <option value="weekday">Ngày thường</option>
                    <option value="weekend">Cuối tuần</option>
                    <option value="holiday">Ngày lễ</option>
                </select>

                <!-- Loại phòng chiếu -->
                <label for="room-type">Loại phòng chiếu:</label>
                <select id="room-type" name="room-type" required>
                    <option value="" disabled selected>Chọn loại phòng chiếu</option>
                    <option value="standard">Phòng Standard</option>
                    <option value="dolby">Phòng Dolby Atmos</option>
                    <option value="imax">Phòng IMAX</option>
                </select>

                <!-- Giá vé -->
                <label for="ticket-price">Giá vé (VND):</label>
                <input type="number" id="ticket-price" name="ticket-price" placeholder="Nhập giá vé" required>

                <!-- Nút hành động -->
                <div class="popup-buttons">
                    <button type="submit" class="btn btn-success">Tạo</button>
                    <button type="button" class="btn btn-secondary" id="close-popup">Đóng</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        const openTicketPopup = document.getElementById('create-pu-btn'); // Nút mở popup
        const ticketPopup = document.getElementById('popup'); // Popup chính
        const closeTicketPopup = document.getElementById('close-popup'); // Nút đóng popup

        // Mở popup
        if (openTicketPopup) {
            openTicketPopup.addEventListener('click', () => {
                ticketPopup.classList.add('active'); // Thêm lớp active để hiển thị popup
            });
        }

        // Đóng popup
        if (closeTicketPopup) {
            closeTicketPopup.addEventListener('click', () => {
                ticketPopup.classList.remove('active'); // Xóa lớp active để ẩn popup
            });
        }
    </script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


