@model SixChickenFilm.Models.PhimChiTietViewModel

@{
    ViewData["Title"] = "Chi tiết phim";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/chitietphim.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <!-- Trailer -->
    <div class="row">
        <div class="col-12">
            <div class="movie-trailer">
                <div class="trailer-container" id="trailer-container">
                    <img src="@Model.Phim.Trailer" alt="Trailer @Model.Phim.Ten" onclick="playTrailer()">
                    <div class="trailer-container-button" onclick="playTrailer()">
                        <img alt="play" src="~/images/button-play.png">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Thông tin chi tiết phim -->
    <div class="row movie-detail-content align-items-center">
        <div class="col-md-5 text-center">
            <img src="@Model.Phim.Poster" alt="Poster phim @Model.Phim.Ten" class="movie-poster rounded shadow-sm" loading="lazy" />
        </div>
        <div class="col-md-7">
            <h1 class="movie-title">@Model.Phim.Ten</h1>
            <ul class="list-unstyled">
                <li><strong>Thể loại:</strong> @Model.Phim.TheLoai</li>
                <li><strong>Đạo diễn:</strong> @Model.Phim.DaoDien</li>
                <li><strong>Diễn viên:</strong> @Model.Phim.DienVien</li>
                <li><strong>Khởi chiếu:</strong> @Model.Phim.KhoiChieu.ToString("dd/MM/yyyy")</li>
                <li><strong>Quốc gia:</strong> @Model.Phim.QuocGia</li>
            </ul>

            <h3 class="section-title mt-3">Nội Dung Phim</h3>
            <p>
                @Model.Phim.MoTa
            </p>
        </div>
    </div>

    <!-- Lịch chiếu phim -->
    <div class="row movie-showtimes mt-5">
        <div class="col-12">
            <h2 class="showtimes-title text-center">Lịch chiếu</h2>

            @if (Model.SuatChieus != null && Model.SuatChieus.Count > 0)
            {
                @foreach (var suat in Model.SuatChieus)
                {
                    <div class="format p-3 bg-white rounded shadow-sm mb-3">
                        <div class="format-name fw-bold mb-2">
                            @suat.DinhDang - @suat.Rap (@suat.DiaDiem)
                        </div>
                        <div class="time-slots d-flex gap-2">
                            <a href="#" class="btn btn-danger time-slot">
                                @suat.GioChieu.ToString("HH:mm")
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-center">Chưa có suất chiếu nào.</p>
            }
        </div>
    </div>

    <script>
        function playTrailer() {
            const container = document.getElementById("trailer-container");
            container.innerHTML = `<iframe width="100%" height="100%" src="@Model.Phim.Trailer.Replace("img.youtube.com/vi", "www.youtube.com/embed").Replace("/maxresdefault.jpg", "")" frameborder="0" allowfullscreen></iframe>`;
        }
    </script>

</body>
</html>
